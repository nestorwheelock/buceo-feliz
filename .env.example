# ================================
# DiveOps Environment Configuration
# ================================

# Django Core
SECRET_KEY=your-production-secret-key-here
DEBUG=False
ALLOWED_HOSTS=diveops.example.com,www.diveops.example.com
CSRF_TRUSTED_ORIGINS=https://diveops.example.com,https://www.diveops.example.com

# PostgreSQL Database
POSTGRES_DB=diveops
POSTGRES_USER=diveops
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Cache
REDIS_URL=redis://redis:6379/0

# AWS S3 (optional - for media storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1

# Email (SMTP/SES)
EMAIL_HOST=email-smtp.us-east-1.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@diveops.app

# AI Services (optional)
OPENROUTER_API_KEY=

# Business Configuration
DIVE_SHOP_NAME=Your Dive Shop
DIVE_SHOP_TIMEZONE=America/New_York

# Superuser (for initial setup)
SUPERUSER_EMAIL=admin@diveops.app
SUPERUSER_PASSWORD=

# Migration flag (for container startup)
MIGRATE=true
