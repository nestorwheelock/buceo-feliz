FROM python:3.12-slim

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libgdk-pixbuf2.0-0 \
    libffi-dev \
    shared-mime-info \
    git \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install Python dependencies
COPY requirements/base.txt requirements/dev.txt ./
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r dev.txt

# Install django-primitives in editable mode
COPY lib/django-primitives/packages/ /lib/packages/
RUN for pkg in /lib/packages/django-*/; do \
        pip install -e "$pkg"; \
    done

EXPOSE 8000

CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
